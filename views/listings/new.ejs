<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" class="needs-validation " novalidate enctype="multipart/form-data">

      <div class="mb-3">
      <lable for="title" class="form-lable">Title</lable>
      <input name="listing[title]" placeholder="enter a Title" type="text" class="form-control" required/>
      <div class="valid-feedback">
        Looks good!
      </div>
      </div>

      <div class="mb-3">
        <lable for="description" class="form-lable">Description</lable>
        <textarea name="listing[description]" placeholder="enter a Description" class="form-control" required></textarea>
        <div class="invalid-feedback">
          Enter a short description
        </div>
      </div>

      <div class="mb-3">
        <lable for="image" class="form-lable">Upload Image</lable>
        <input name="listing[image]" placeholder="enter Image Link" type="file" class="form-control" required/>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-lable">Price</lable>
          <input name="listing[price]" placeholder="enter Price" type="number" class="form-control" required/>
          <div class="invalid-feedback">
            Enter Valid Price
          </div>
        </div>
  
        <div class="mb-3 col-md-8">
          <lable for="country" class="form-lable">Country</lable>
          <input name="listing[country]" placeholder="enter Country Name" type="text" class="form-control" required/>
          <div class="invalid-feedback">
            Enter Valid Country name
          </div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-lable">Location</lable>
        <input name="listing[location]" placeholder="enter Location" type="text" class="form-control" required/>
        <div class="invalid-feedback">
          Enter Valid Location
        </div>
      </div>

      <button class="btn btn-dark add-btn mt-3">Add</button>
      <br/><br/>
    </form>
  </div>
</div>
  </body>
